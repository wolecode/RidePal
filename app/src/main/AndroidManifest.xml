<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ridehub360.ridepal">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ridehub360.ridepal.ui.login.SignInActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name="com.ridehub360.ridepal.MainActivity"
            android:theme="@style/FullScreenTheme"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ridehub360.ridepal.ui.onboarding.OnBoardingActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name="com.ridehub360.ridepal.SplashActivity"
            android:theme="@style/SplashScreenTheme"
            android:label="@string/app_name">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>